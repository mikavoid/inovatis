<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}iNovatis - Shop{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
        <link rel="stylesheet" href="{{asset('resources/vendor/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('resources/styles/shop/css/main.css') }}">
    </head>
    <body>
      {% block ecommerce_header %}
        <!-- TopBar ------------------------------------------------------------------>
        <section id="TopBar">
            <div class="row">
                <div class="top_bar_reseaux_sociaux">
                    <ul>
                        <li><a href="#"><span class="fa fa-facebook-square"></span></a></li>
                        <li><a href="#"><span class="fa fa-twitter-square"></span></a></li>
                    </ul>
                </div><!-- .top_bar_reseaux_sociaux -->

                <div class="top_bar_menu">
                    <ul>
                        {% if app.user %}
                            <li><a href="#"><span class="fa fa-user"></span> {{ app.user }}</a><a href="{{ path('fos_user_security_logout') }}"><span class="fa fa-sign-out"></span></a></li>
                        {% else %}
                            <li><a href="{{ path('user.login') }}"><span class="fa fa-sign-in"></span> Sign In</a></li>
                        {% endif %}
                        <li><a href="{{ path('shop.cart') }}"><span class="fa fa-shopping-cart"></span></a></li>
                    </ul>
                </div><!-- .top_bar_menu -->
            </div>
        </section> <!--#TopBar-->
        <!-- NavBar ------------------------------------------------------------------>
        <section id="NavBar" class="z-depth-1">
            <nav class="row">
                <div id="main_menu">
                    <div class="title-bar" data-responsive-toggle="tpr-menu" data-hide-for="medium">
                        <a class="menu horizontal" href="#" data-toggle><div class="title-bar-title">Menu</div></a>
                    </div>
                    <div class="top-bar" id="tpr-menu">
                        <div class="top-bar-left">
                            <ul class="vertical medium-horizontal menu accrdn" data-responsive-menu="accordion medium-dropdown">
                                <li class="menu-text">
                                    <a href="{{ path('shop.homepage') }}"><img src="{{ asset('resources/img/shop/raw_logo_dark.png') }}" alt=""></a>
                                </li>
                                {{ render(controller('InoShopBundle:Shop:showMenu', {})) }}
                            </ul>
                        </div>
                        <div class="top-bar-right">
                            <form role="search" id="nav-search-form" method="post" action="{{ path('shop.search') }}">
                            <ul class="menu">
                                <li><input type="search" placeholder="Search" name ="search"></li>
                                <li><button type="submit" class="button">Abracadabra</button></li>
                            </ul>
                            </form>
                        </div>
                    </div>
                </div>  
            </nav>
